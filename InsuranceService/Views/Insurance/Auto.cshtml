@model InsuranceDataAccess.Autos

@{
    ViewBag.Title = "Auto";
    Layout = "~/Views/Shared/_Insurance_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            Assurance
        </li>
        <li class="breadcrumb-item"> Obtenir Une Soumission</li>
        <li class="breadcrumb-item">Auto</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
                Obtenir Une Soumission
        </div>
        <div class="card-body">

            @using (Html.BeginForm("GetAuto", "Insurance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Auto</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Year, new SelectList(ViewBag.Years), "-- Séléctionner la d'année de l voiture --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Marque, new SelectList(ViewBag.Marque), "-- Selectionner une marque de voiture --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Marque, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Model, new SelectList(ViewBag.Model_Hyndai), "-- Selectionner le modele --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Vehicle_Nbre, new SelectList(ViewBag.NbreVoiture), "-- Selectionner le nombre de voiture --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Vehicle_Nbre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsLeqsedOrFinanced, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IsLeqsedOrFinanced, new SelectList(ViewBag.Loue_Finance), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsLeqsedOrFinanced, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Vehicle_Use, new SelectList(ViewBag.Usage), "-- Selectionner l'usage de la voiture --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Vehicle_Use, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.KilometersPerYear, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KilometersPerYear, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KilometersPerYear, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Infraction_Nbre, new SelectList(ViewBag.Nre_Infraction), "-- Selectionner le nombre d'infraction --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Infraction_Nbre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Accident_Nbre, new SelectList(ViewBag.Nbre_Accident), "-- Sélectionner le nombre d'accident s'il y a eu lieu --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Accident_Nbre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Claim_Type, new SelectList(ViewBag.Accident_Type), "-- Selectionner le type de réclammation s'il y a eu lieu --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Claim_Type, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date_Of_Claim, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Date_Of_Claim, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Date_Of_Claim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a onclick="window.history.back()" class="btn btn-danger">Précédent</a>
                        <input type="submit" value="Continuer" class="btn btn-success" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>